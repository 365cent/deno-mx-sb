<!doctype html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or site.title }}</title>
    <meta name="description" content="{{ description or site.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="alternate" href="{{ 'feed.xml' | url }}" type="application/atom+xml" title="{{ site.title }}">
    <link rel="alternate" href="{{ 'feed.json' | url }}" type="application/json" title="{{ site.title }}">
  </head>
  <body>
    <nav class="navbar">
      <a href="{{ '/' | url }}" class="navbar-home">
        <strong>{{ site.title }}</strong>
      </a>

      <ul class="navbar-links">
      {%- for entry in search.pages("menu", "menuOrder") %}
        <li>
          <a href="{{ entry.data.url | url }}"{% if entry.data.url == url %} aria-current="page"{% endif %}>
            {{ entry.data.menuTitle or entry.data.title }}
          </a>
        </li>
      {%- endfor %}
      </ul>
    </nav>

    <main class="{{ bodyClass }}">

      <!-- Delete this message -->
