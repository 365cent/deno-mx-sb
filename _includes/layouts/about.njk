---
layout: layouts/base.njk
bodyClass: body-post
---
<article class="post" data-pagefind-body>
  <div class="post-header">
    <h1 class="post-title">{{ title }}</h1>
  </div>

  <div class="post-body">
    {{ content | safe }}
    <ul class="friend-links">
    {% for link in links %}
      <li><a href="{{ link }}" class="link">{{ link }}</a></li>
    {% endfor %}
    </ul>
  </div>
</article>
