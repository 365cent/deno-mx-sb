---
layout: layouts/base.njk
bodyClass: body-post
---
<article class="post" data-pagefind-body>
  <div class="post-header">
    <h1 class="post-title">{{ title }}</h1>
  </div>

  <div class="post-body">
    {{ content | safe }}
  </div>
</article>

<hr>

<h2>Friend of Mine</h2>
<ul class="friend-links">
{% for link in links %}
  <li>
    <a href="{{ link[1] }}" target="_blank" class="link">
      <span>{{ link[0] }}</span>
      <img src="https://plausible.io/favicon/sources/{{ link[1].split("//")[1] }}" />
    </a>
  </li>
{% endfor %}
</ul>
