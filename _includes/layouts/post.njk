---
layout: layouts/base.njk
bodyClass: body-post
---
<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>

    <nav class="post-tags">
    {% for tag in tags %}
      {% if tag != "post" and tag != "menu" %}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="tag">{{ tag }}</a>
      {% endif %}
    {% endfor %}
    </nav>

    <time class="post-date" datetime="{{ date | date('DATETIME') }}">
      {{ date | date('HUMAN_DATE') }}
    </time>
  </header>

  <div class="post-body">
    {{ content | safe }}
  </div>
</article>

<hr>

<nav class="post-navigation">
  <ul>
    {%- set previousPost = search.previousPage(url, "post") %}
    {%- if previousPost %}
    <li>
      ← Previous: <a href="{{ previousPost.data.url | url }}" rel="prev">{{ previousPost.data.title }}</a>
    </li>
    {% endif %}

    {%- set nextPost = search.nextPage(url, "post") %}
    {%- if nextPost %}
    <li>
      <strong>Next: <a href="{{ nextPost.data.url | url }}" rel="next">{{ nextPost.data.title }}</a> →</strong>
    </li>
    {% endif %}
  </ul>
</nav>